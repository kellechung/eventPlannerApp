<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/txtTripHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trip Information"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtMyTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter trip information"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txtTripNameDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name trip"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/txtFromDateDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Depart Date"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/edtTextFromDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/txtToDateDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return Date"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/edtTextToDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/txtNumPeopleDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of people going"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/txttripTypeDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transportation type"
        android:textAppearance="?android:attr/textAppearanceSmall" />

   <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/radioGround"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ground" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Air" />

    </RadioGroup>

</LinearLayout>