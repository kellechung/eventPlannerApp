<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/txtTripName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txtDestName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Holder for destination Name"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txtHotelInfoDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotel Stay Information"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold" />



    <Space
        android:layout_width="5dp"
        android:layout_height="5dp" />

    <TextView
        android:id="@+id/txtHotelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotel Name"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/edtTextHotelName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="8" >

        <requestFocus
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </EditText>

    <TextView
        android:id="@+id/txtStreetAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Street Address"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/edtTextStreetAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="8" >

        <requestFocus android:layout_width="wrap_content" />
    </EditText>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    <TextView
        android:id="@+id/txtCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/edtTextCity"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:ems="8" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/txtZip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zip"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/edtTextZip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="8"
        android:inputType="number" />

    </LinearLayout>


    <TextView
        android:id="@+id/txtNumNights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of nights"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edtTextNumNights"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/txtCostPerNight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cost Per Night"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edtTextCostPerNight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnSave"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:text="Save" />

        <Button
            android:id="@+id/btnCalculate"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtCostPerPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cost per person:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txtcalcCostPerPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeholder for calc cost"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
</LinearLayout>